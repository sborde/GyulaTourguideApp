<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.borde.gyulatourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EventActivity"
            android:label="Events, festivals"
            android:parentActivityName=".activity.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainMenuActivity" />
        </activity>
        <activity
            android:name=".activity.AccomodationActivity"
            android:label="Accomodations"
            android:parentActivityName=".activity.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainMenuActivity" />
        </activity>
        <activity
            android:name=".activity.RestaurantActivity"
            android:label="Restaurants"
            android:parentActivityName=".activity.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainMenuActivity" />
        </activity>
        <activity
            android:name=".activity.SightsActivity"
            android:label="Sights"
            android:parentActivityName=".activity.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainMenuActivity" />
        </activity>
    </application>

</manifest>