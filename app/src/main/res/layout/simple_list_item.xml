<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:layout_margin="@dimen/layout_margin_size"
    android:padding="5dp"
    android:background="@color/activityBackground">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/layout_margin_size"
        android:layout_marginLeft="@dimen/layout_margin_size"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/layout_margin_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/layout_margin_size"
            android:paddingRight="20dp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            tools:text="Eseménynév valami hosszú szöveg"/>

        <TextView
            android:id="@+id/item_descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:textStyle="italic"
            tools:text="Esemény dátum"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/on_map_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/layout_margin_size"
        android:src="@drawable/on_map"/>


</LinearLayout>