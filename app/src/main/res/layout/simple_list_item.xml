<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:layout_margin="@dimen/layout_margin_size"
    android:padding="5dp"
    android:background="@color/activityBackground">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/layout_margin_size"
        android:layout_marginLeft="@dimen/layout_margin_size"
        tools:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/sight_picture"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_icon_size"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/layout_margin_size"
        android:layout_marginLeft="@dimen/layout_margin_size"
        android:visibility="gone"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_text_height"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/layout_margin_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/title_text_fontsize"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/layout_margin_size"
            android:paddingRight="@dimen/layout_margin_size"
            android:paddingLeft="@dimen/padding_small"
            android:gravity="center_vertical"
            tools:text="@string/title_placeholder"/>

        <TextView
            android:id="@+id/item_descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:textStyle="italic"
            tools:text="@string/desc_placeholder"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/on_map_icon"
        android:layout_width="@dimen/action_icon_size"
        android:layout_height="@dimen/action_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/layout_margin_size"
        android:src="@drawable/on_map"/>


</LinearLayout>